<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amit.metro_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.amit.metro_app.MainActivity"
            android:label="Menu" >
            <intent-filter>
                <action android:name="com.amit.metro_app.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amit.metro_app.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amit.metro_app.Route_map"
            android:label="@string/title_activity_route_map" >
        </activity>
        <activity
            android:name="com.amit.metro_app.Fare_chart"
            android:label="@string/title_activity_fare_chart" >
        </activity>
    </application>

</manifest>
